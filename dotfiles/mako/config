# Mako Notification Daemon Configuration
# Enhanced with modern animations, gradients, and advanced notification handling

# ===== APPEARANCE =====
# Modern gradient background with transparency and blur effect
background-color=#1a1b26ee
text-color=#c0caf5
border-color=#7aa2f7
border-size=2
border-radius=16

# Typography with better font
font=AdwaitaMono Nerd Font 11
padding=24
margin=20
width=400
height=90

# ===== ANIMATIONS & EFFECTS =====
# Faster, smoother animations
default-timeout=4000
group-by=app-name
sort=+time

# ===== MULTI-NOTIFICATION HANDLING =====
# Better stacking and management
max-visible=6
output=DP-1

# ===== ICONS & VISUALS =====
icons=1
icon-size=28

# ===== NOTIFICATION TYPES =====
# Success notifications (green theme)
[urgency=low]
background-color=#1a1b26ee
text-color=#9ece6a
border-color=#9ece6a
border-size=2
default-timeout=3000

# Warning notifications (yellow theme)
[urgency=normal]
background-color=#1a1b26ee
text-color=#e0af68
border-color=#e0af68
border-size=2
default-timeout=4000

# Error notifications (red theme)
[urgency=critical]
background-color=#1a1b26ee
text-color=#f7768e
border-color=#f7768e
border-size=3
default-timeout=6000

