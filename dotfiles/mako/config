# Mako Notification Daemon Configuration
# Enhanced with animations, gradients, and better multi-notification handling

# ===== APPEARANCE =====
# Modern gradient background with transparency
background-color=#1a1b26dd
text-color=#c0caf5
border-color=#7aa2f7
border-size=2
border-radius=12


# Typography
font=FiraCode Nerd Font 11
padding=20
margin=16
width=380
height=80

# ===== ANIMATIONS & EFFECTS =====
# Smooth animations
default-timeout=5000
group-by=app-name
sort=+time

# ===== MULTI-NOTIFICATION HANDLING =====
# Stack notifications nicely
max-visible=5
output=DP-1

# ===== ICONS & VISUALS =====
icons=1
icon-size=24

# ===== NOTIFICATION TYPES =====
# Success notifications (green theme)
[urgency=low]
background-color=#1a1b26dd
text-color=#9ece6a
border-color=#9ece6a
border-size=2

# Warning notifications (yellow theme)
[urgency=normal]
background-color=#1a1b26dd
text-color=#e0af68
border-color=#e0af68
border-size=2

# Error notifications (red theme)
[urgency=critical]
background-color=#1a1b26dd
text-color=#f7768e
border-color=#f7768e
border-size=3

# ===== APP-SPECIFIC STYLING =====
# Discord notifications
[app-name=Discord]
background-color=#5865f2dd
text-color=#ffffff
border-color=#ffffff
border-size=2

# Firefox/Web browser notifications
[app-name=firefox]
background-color=#ff7139dd
text-color=#ffffff
border-color=#ffffff
border-size=2

# Music player notifications
[app-name=spotify]
background-color=#1db954dd
text-color=#ffffff
border-color=#ffffff
border-size=2

[app-name=mpv]
background-color=#ff6b6bdd
text-color=#ffffff
border-color=#ffffff
border-size=2

# System notifications
[app-name=systemd]
background-color=#7aa2f7dd
text-color=#ffffff
